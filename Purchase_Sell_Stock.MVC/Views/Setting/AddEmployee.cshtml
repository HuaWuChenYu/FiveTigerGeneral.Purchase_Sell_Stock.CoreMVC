
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddEmployee</title>
    <link href="~/layui/css/layui.css" rel="stylesheet" />
    <script src="~/layui/layui.js"></script>
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/JWT.js"></script>
</head>
<body>
    <form class="layui-form  layui-form-pane" action="" lay-filter="example">
        <div class="layui-form-item">
            <label class="layui-form-label">员工工号:</label>
            <div class="layui-input-inline">
                <input type="text" name="employeeNumber" autocomplete="off" placeholder="请输入员工工号" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">所属部门:</label>
            <div class="layui-input-inline">
                <select name="employeeDepartmentId" id="EmployeeDepartmentId" lay-filter="aihao">
                    <option value="-1"></option>
                </select>
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">联系电话:</label>
            <div class="layui-input-inline">
                <input type="text" name="employeeContact" autocomplete="off" placeholder="请输入员工联系电话" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">员工姓名:</label>
            <div class="layui-input-inline">
                <input type="text" name="employeeName" autocomplete="off" placeholder="请输入员工姓名" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">所属角色:</label>
            <div class="layui-input-inline">
                <select name="employeeRolesId" id="EmployeeRolesId" lay-filter="aihao">
                    <option value="-1"></option>
                </select>
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">账号:</label>
            <div class="layui-input-inline">
                <input type="text" name="departmentName" autocomplete="off" placeholder="如果未注册,请先注册一个账号" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">状态</label>
            <div class="layui-input-block">
                <input type="radio" name="employeeStates" value="true" title="正常" checked="">
                <input type="radio" name="employeeStates" value="false" title="禁用">
            </div>
        </div>
        <div class="layui-form-item">
            <button class="layui-btn" lay-submit="" style="background-color:deeppink" lay-filter="demo2">确认创建</button>
        </div>
    </form>
</body>
</html>
<script>
    layui.use(['form', 'layedit', 'laydate'], function () {
        var form = layui.form
            , layer = layui.layer
            , layedit = layui.layedit
            , laydate = layui.laydate;
        LoadDept();
        LoadRole();
        layui.form.render("select");
        //监听提交
        form.on('submit(demo2)', function (data) {
            if (data.field.employeeNumber=="") {
                alert('员工工号不能为空');
                return;
            }
            if (data.field.employeeName == "") {
                alert('员工姓名不能为空');
                return;
            }
            if (data.field.departmentName == "") {
                alert('员工账号不能为空');
                return;
            }
            data.field.employeeDepartmentId = Number(data.field.employeeDepartmentId);
            data.field.employeeRolesId = Number(data.field.employeeRolesId);
            data.field.employeeStates = Boolean(data.field.employeeStates);
            if (data.field.employeeDepartmentId<1) {
                alert('请选择部门');
                return;
            }
            if (data.field.employeeRolesId < 1) {
                alert('请选择角色');
                return;
            }

            $.ajax({
                url: "http://localhost:49760/api/Setting/AddEmployee",
                contentType: "application/json",
                type: "post",
                data: JSON.stringify(data.field),
                success: function (d) {
                    if (d>0) {
                        alert('添加成功');
                    }
                    else {
                        alert('添加失败');
                    }
                }
            });
            //layer.alert(JSON.stringify(data.field), {
            //    title: '最终的提交信息'
            //})
            return false;
        });

    });
    function LoadDept() {
        $.ajax({
            url: "http://localhost:49760/api/Setting/GetDepartments",
            contentType: "application/json",
            async: false,
            success: function (d) {
                $(d).each(function () {
                    var str = "<option value='" + this.departmentId + "'>" + this.departmentName + "</option>";
                    $("#EmployeeDepartmentId").append(str);
                })
            }
        });

    }
    function LoadRole() {
        $.ajax({
            url: "http://localhost:49760/api/Setting/GetRolesForSelect",
            contentType: "application/json",
            async: false,
            success: function (d) {
                $(d).each(function () {
                    var str = "<option value='" + this.rolesId + "'>" + this.rolesName + "</option>";
                    $("#EmployeeRolesId").append(str);
                })
            }
        });
    }
</script>