
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>忘记密码</title>
</head>
<body>
    <form class="layui-form" action="">
        <div class="layui-form-item">
            <label class="layui-form-label">手机号</label>
            <div class="layui-input-block">
                <input type="text" phone name="phone" lay-verify="title" autocomplete="off" placeholder="请输入手机号" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">验证必填项</label>
            <div class="layui-input-block">
                <input type="text" name="YZM" id="YZM" lay-verify="required" lay-reqtext="设置密码（8-12位，包含数字及字母）" placeholder="请输入6位验证码" autocomplete="off" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">密码</label>
            <div class="layui-input-block">
                <input type="text" name="pwd" id="pwd" lay-verify="required" lay-reqtext="用户名是必填项，岂能为空？" placeholder="设置密码（8-12位，包含数字及字母）" autocomplete="off" class="layui-input">
            </div>
        </div>

    </form>
</body>
</html>
