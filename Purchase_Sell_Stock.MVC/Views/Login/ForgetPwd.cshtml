
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="~/layui/layui.js"></script>
    <link href="~/layui/css/layui.css" rel="stylesheet" />
    <title>忘记密码</title>
</head>
<body>
    <div class="body">
        <!--<img src="img/tubiao-09.png" class="logo" />-->
        <div class="body_count">
            <div class="login_count">
                <div class="login_count_a">
                    <div class="login_count_a_l">
                        <div class="login_a_l_t">扫码登录点这里</div>
                        <div class="triangle"></div>
                        @*<img src="img/tubiao-02.png" class="icon_e" />*@
                        <img src="~/jquerylogin/img/tubiao-02.png" />
                    </div>
                    <div id="all">
                        <ul id="option">
                            <li class="active login_left">密码登录</li>
                            <li class="login_right">短信登录</li>

                        </ul>
                        <ul id="card">
                            <li class="active">
                                <!--输入框-->
                                <div class="login_bot_count">
                                    @*<img src="img/tubiao-07.png" alt="" />*@
                                    <img src="~/jquerylogin/img/tubiao-07.png" />
                                    <input type="text" name="phone" id="phone" placeholder="请输入账号" />
                                </div>
                                <div class="login_bot_count">
                                    @*<img src="img/tubiao-06.png" alt="" />*@
                                    <img src="~/jquerylogin/img/tubiao-06.png" />
                                    <input type="text" name="pwd" id="pwd" placeholder="请输入密码" />
                                </div>
                                <div class="login_bot">
                                    <a class=" layui-btn-xs" lay-event="edit" onclick="location.href='/Login/ForgetPwd'">忘记密码</a>
                                    <p><input type="checkbox" name="vehicle" value="Bike" />记住密码</p>
                                </div>
                                <!--登录按钮-->
                                <button type="submit" class="login_account_button" lay-filter="demo1">登录</button>
                                <button type="button" class="login_account_button" lay-event="edit" onclick="location.href='/Login/Register'">注册</button>
                            </li>
                            <li class="login_account">
                                <!--输入框-->
                                <div class="login_account_count">
                                    @*<img src="img/tubiao-05.png" alt="" />*@
                                    <img src="~/jquerylogin/img/tubiao-05.png" />
                                    <select class="account_select">
                                        <option value="+86">+86</option>
                                        <option value="+852">+852</option>
                                        <option value="+853">+853</option>
                                        <option value="+886">+886</option>
                                    </select>
                                    <img src="img/line-down.png" alt="" class="account_select_icon" />
                                    <input type="text" name="usersphone" class="mobile_input" placeholder="请输入手机号码" id="usersphone" />
                                </div>
                                <div class="login_account_counts">
                                    @*<img src="img/tubiao-06.png" alt="" />*@
                                    <img src="~/jquerylogin/img/tubiao-06.png" />
                                    <input type="text" name="pnum" id="pnum" placeholder="请输入验证码" />
                                    <input class="account_code" type="button" id="btn" value="获取验证码" />
                                </div>
                                <!--登录按钮-->
                                <button class="login_account_button" lay-filter="Deng1">登录</button>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <script src="https://www.jq22.com/jquery/jquery-1.10.2.js"></script>
    <script type="text/javascript" src="js/login.js"></script>
    <script src="~/jquerylogin/js/login.js"></script>
</body>
<body>
    <div class="video-player" preload="auto" autoplay="autoplay" loop="loop" data-height="1080" data-width="1920" height="1080" width="1920">
        <!--背景图片-->
        <img src="~/Img/90fbe7e286060410183dbef0bdd9f84a.jpeg" style="width:100%; height:100%" />
    </div>
    <form style="margin-top:-500px;margin-left:1400px" class="layui-form" action="">
        <div class="layui-form-item">
            <label class="layui-form-label" style="color:white">手机号</label>
            <div class="layui-input-inline">
                <input type="text" phone name="phone" lay-verify="title" autocomplete="off" placeholder="请输入手机号" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label" style="color:white">验证必填项</label>
            <div class="layui-input-inline">
                <input type="text" name="YZM" id="YZM" lay-verify="required" lay-reqtext="设置密码（8-12位，包含数字及字母）" placeholder="请输入6位验证码" autocomplete="off" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label" style="color:white">密码</label>
            <div class="layui-input-inline">
                <input type="text" name="pwd" id="pwd" lay-verify="required" lay-reqtext="用户名是必填项，岂能为空？" placeholder="设置密码（8-12位，包含数字及字母）" autocomplete="off" class="layui-input">
            </div>
        </div>
        <div class="layui-form-item">
            <div class="layui-input-block">
                <button type="submit" class="layui-btn" lay-submit="" lay-filter="demo1">确定修改</button>
            </div>
        </div>
    </form>
</body>
</html>
<script>
    layui.use(['form', 'layer'], function () {
        var form = layui.form
            , layer = layui.layer
        var $ = layui.$;
        //监听提交
        form.on('submit(demo1)', function (data) {
            var obj = {};
            obj.UserPhone = data.field.phone;
            obj.UserPasswork = data.field.pwd;
            console.log(obj);
            $.ajax({
                url: 'http://localhost:49760/api/Forgers',
                type: 'post',
                data: JSON.stringify({ UserPhone: $("#phone").val(), UserPassword: $("#pwd").val() }),
                contentType: 'application/json',
                dataType: 'json',
                success: function (d) {
                    if (d > 0) {
                        layer.msg('修改成功', { icon: 1, title: '提示', time: 2000 }, function () {
                            layer.close(index);//关闭弹窗
                            location.href = '/Login/Show';
                        })
                    }
                    else {
                        layer.msg("修改失败");
                    }
                }
            })
            return false;
        });
    });
</script>
