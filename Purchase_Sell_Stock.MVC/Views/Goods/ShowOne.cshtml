
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ShowOne</title>
    <script src="~/layui/layui.js"></script>
    <link href="~/layui/css/layui.css" rel="stylesheet" />
</head>
<body>
    <fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
        <legend>商品明细</legend>
    </fieldset>
    <form class="layui-form" action="" id="form">
        <div class="layui-form-item">
            <label class="layui-form-label">商品名称:</label>
            <label class="layui-form-label" id="goodsName"></label>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">商品规格:</label>
            <label class="layui-form-label" id="goodsSize"></label>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">商品类型:</label>
            <label class="layui-form-label" id="goodsclassify"></label>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">商品分类:</label>
            <label class="layui-form-label" id="goodsTypeName"></label>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">库存单位:</label>
            <label class="layui-form-label" id="goodsUnitName"></label>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">品牌:</label>
            <label class="layui-form-label" id="goodsBrandName"></label>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">售价:</label>
            <label class="layui-form-label" id="price"></label>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">进货价:</label>
            <label class="layui-form-label" id="procurementPrice"></label>
        </div>
        <div class="layui-upload">
            <label class="layui-form-label">商品图片</label>
            <img class="layui-upload-img" id="goodsPhoto" style="width:198px;height:130px">
        </div>
        <fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
            <legend></legend>
        </fieldset>
    </form>
</body>
</html>
<script>
    layui.use(['form', 'layer', 'table', 'upload'], function () {
        var form = layui.form
            , layer = layui.layer
            , $ = layui.$;
        //反填信息
        $.ajax({
            url: 'http://localhost:49760/api/GetGoodsById/'+@ViewBag.Id,
            type: 'get',
            contentType: 'application/json',
            success: function (d) {
                $("#goodsclassify").text(d.goodsclassify);
                $("#goodsBrandName").text(d.goodsBrandName);
                $("#goodsUnitName").text(d.goodsUnitName);
                $("#goodsTypeName").text(d.goodsTypeName);
                $("#goodsName").text(d.goodsName);
                $("#procurementPrice").text(d.procurementPrice);
                $("#price").text(d.price);
                $("#goodsPhoto").prop("src", d.goodsPhoto);
                $("#goodsSize").text(d.goodsSize);
            }
        })
    });
</script>