
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="~/layui/layui.js"></script>
    <link href="~/layui/css/layui.css" rel="stylesheet" />
    <title>用户标签</title>
</head>
<body>
    <table class="layui-hide" id="test" lay-filter="test"></table>

</body>
</html>
<script type="text/html" id="toolbarDemo">
    <div class="layui-btn-container">
        <button class="layui-btn layui-btn-sm" lay-submit="" lay-event="demo1">新建标签</button>
        <button type="button" class="layui-btn layui-btn-sm" lay-event="refresh" onclick="location.href='/Customer/GetLableIndex'">刷新</button>
    </div>
</script>

<script type="text/html" id="barDemo">
    <a class="layui-btn layui-btn-xs" lay-event="edit">编辑</a>
    <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>`
</script>
<script>
    layui.use('table', function () {
        var table = layui.table;
        var $ = layui.$;
        table.render({
            elem: '#test'
            , url: 'http://@ViewBag.Url/api/GetLableShow'
            , toolbar: '#toolbarDemo' //开启头部工具栏，并为其绑定左侧模板
            , title: '用户数据表'
            , cols: [[
                { type: 'checkbox', fixed: 'left' }
               
                , { field: 'LableName', title: '标签名称', width: 120, }
                , { field: 'CustomerNumber', title: '用户数', width: 100, sort: true }
                , { field: 'LableExplain', title: '说明', width: 120, }
                , { field: 'LableTime', title: '创建时间', width: 120 }
                , { fixed: 'right', title: '操作', toolbar: '#barDemo', width: 150 }
            ]]
            , page: true
            , limit: 10
            , limits: [10, 20, 50]
            , request: {
                limitName: 'pageSize',
                pageName: 'pageIndex',
            }
            , id: 'testReload'
        });

        //头工具栏事件
        table.on('toolbar(test)', function (obj) {
            var checkStatus = table.checkStatus(obj.config.id);
            switch (obj.event) {
                case 'demo1':
                    layer.open({
                        type: 2 //此处以iframe举例
                        , title: '创建商品档案'
                        , area: ['600px', '800px']
                        , shade: 0
                        , id: 'LAY_layuipro' //设定一个id，防止重复弹出
                        , maxmin: false
                        , content: '/Customer/AddLable'
                        , btn: ['关闭'] //只是为了演示
                        , btn2: function () {
                            layer.closeAll();
                        }
                        , zIndex: layer.zIndex //重点1
                        , success: function (layero) {
                            layer.setTop(layero); //重点2
                        }
                    });
                    break;
            };
        });
        
        //监听行工具事件
        table.on('tool(test)', function (obj) {
            var data = obj.data;
            //console.log(obj)
            if (obj.event === 'del') {
                layer.confirm('真的删除行么', function (index) {
                    $.ajax({
                        url: 'http://@ViewBag.Url/api/LableDelete',
                        type: 'get',
                        data: { ids: data.LableId },
                        success: function (d) {
                            if (d > 0) {
                                layer.alert('删除成功', { icon: 1, title: '提示' })
                                table.reload('testReload', function () {
                                    page: {
                                        curr: 1
                                    }
                                });
                            }
                            else {
                                msg("删除失败");
                            }
                        }
                    })
                    layer.close(index);
                });
            }
            else if (obj.event === 'edit') {
                layer.open({
                    type: 2 //此处以iframe举例
                    , title: '编辑标签'
                    , area: ['600px', '800px']
                    , shade: 0
                    , id: 'LAY_layuipro' //设定一个id，防止重复弹出
                    , maxmin: false
                    , content: '/Customer/Modify/'+data.LableId
                    , btn: ['关闭'] //只是为了演示
                    , btn2: function () {
                        layer.closeAll();
                    }
                    , zIndex: layer.zIndex //重点1
                    , success: function (layero) {
                        layer.setTop(layero); //重点2
                    }
                });
            }
        });
    });
</script>
