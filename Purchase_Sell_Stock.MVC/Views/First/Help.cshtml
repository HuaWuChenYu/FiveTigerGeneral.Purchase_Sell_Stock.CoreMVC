
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Help</title>
    <link href="~/layui/css/layui.css" rel="stylesheet" />
    <script src="~/layui/layui.js"></script>
</head>
<body>
    <input id="hid-StoreId" type="hidden" value="@ViewBag.StoreId" />
    <fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
        <legend>帮助中心</legend>
    </fieldset>
    <div style="width:500px">
        <table class="layui-hide" id="testHelp"></table>
    </div>
</body>
</html>

<script>
    layui.use(['form', 'layer', 'table'], function () {
        var form = layui.form
            , layer = layui.layer
            , table = layui.table
            , $ = layui.$;
        //帮助中心
        table.render({
            elem: '#testHelp'
            , url: 'http://localhost:49760/api/GetHelp/' + $("#hid-StoreId").val()
            , cellMinWidth: 80 //全局定义常规单元格的最小宽度，layui 2.2.1 新增
            , cols: [[
                { field: 'HelpsId', width: 0, title: '', sort: true, hide: true }
                , { field: 'HelpsContent', width: 250, title: '' }
                , { field: 'HelpsAnswer', width: 250, title: '' }
            ]]
        });
    })
</script>
